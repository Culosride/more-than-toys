<div class="container">
<h1>Welcome to your dashboard</h1>
</div>

<div class="container">
<br>
  <h3>Your bookings</h3>
  <br>
  <div class="row">
    <% @bookings.each do |booking| %>
      <div class="col">
        <img src="https://images.unsplash.com/photo-1432639020363-5632f7f04e0b?crop=entropy&cs=tinysrgb&fm=jpg&ixlib=rb-1.2.1&q=60&raw_url=true&ixid=MnwxMjA3fDB8MHxzZWFyY2h8OXx8cHVwcGV0fGVufDB8fDB8fA%3D%3D&auto=format&fit=crop&w=800" />
      </div>
      <div class="col">
        <p> <%= "You booked this cute toy: #{booking.toy.name.capitalize}." %> </p>
        <p><%= "Total price: #{booking.price} $" %></p>
        <p><%= "For these dates: #{booking.start_date} - #{booking.end_date}." %></p>
        <p><%= link_to "Delete", booking_path(booking), data: { turbo_method: :delete, turbo_confirm: "Are you sure?" }, class: "btn btn-danger m-3" %></p>
         <br>
      </div>
         <% end %>
  </div>
</div>

<%= link_to "Homepage", root_path, class: "btn btn-secondary m-3" %>
