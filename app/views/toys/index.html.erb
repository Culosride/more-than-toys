<h1>Welcome! Browse our Cuty McCuteFace toys!</h1>
<%= link_to "Dashboard", dashboard_path, class: "btn btn-secondary m-3" %>
<%= link_to "Sign in", new_user_session_path, class: "btn btn-primary m-3" %>
<%= link_to "Log out", destroy_user_session_path, data: { turbo_method: :delete }, class: "btn btn-warning m-3"%>

<div class="d-flex justify-content-around">
    <% @toys.each do |toy| %>
    <div>
      <p><%= link_to toy.name.capitalize, toy_path(toy) %></p>
      <p><%= toy.description %></p>
      <p><%= "Cuteness: #{toy.cuteness}" %></p>
      <p><%= "Daily rate: #{toy.price_daily} $" %></p>
      <br>
    <% end %>
    </div>
</div>

