<%= simple_form_for @toy do |f| %>
  <%= f.input :name %>

  <%= f.input :description %>

  <%= f.input :cuteness, collection: 1..5 %>

  <%= f.input :kid_friendly, as: :boolean %>


  <%= f.input :price_daily, as: :integer, placeholder: 'type 100 for 100€' %>

  <%= f.input :location, collection: ["Berlin", "Cagliari", "Bogotà", "Buenos Aires"] %>

  <%= f.input :soul_taking_chance, as: :integer  %>

  <%= f.submit %>
<% end %>
