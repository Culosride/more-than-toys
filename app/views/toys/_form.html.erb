<div class="d-flex justify-content-center">
  <div class="p-3">
    <%= simple_form_for @toy, html: { class:"create-form" } do |f| %>
      <%= f.input :name %>
      <%= f.input :description %>
      <%= f.input :photo, as: :file %>
      <%= f.input :cuteness, collection: 1..5 %>
      <%= f.input :kid_friendly, as: :boolean %>
      <%= f.input :price_daily, as: :integer, placeholder: 'type 100 for 100â‚¬' %>
      <%= f.input :address, collection: Toy::CITIES %>
      <%= f.input :soul_taking_chance, as: :integer  %>
      <%= f.button :submit, class: "btn btn-flat mt-3 ml-0", id:"submit-button" %>
    <% end %>
  </div>
</div>
